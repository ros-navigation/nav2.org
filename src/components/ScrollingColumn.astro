---
interface Props {
  images: Array<{
    src: string;
    alt: string;
  }>;
  direction: 'up' | 'down';
}

const { images, direction } = Astro.props;
---

<div class="relative h-full overflow-hidden">
  <div class={`flex flex-col gap-2 -mt-2 ${direction === 'up' ? 'animate-scroll-up' : 'animate-scroll-down'}`}>
    {images.map((image) => (
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-[300px] object-cover rounded-lg"
      />
    ))}
    {images.map((image) => (
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-[300px] object-cover rounded-lg"
      />
    ))}
  </div>
</div> 