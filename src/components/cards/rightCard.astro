---
const { videoSrc, title, oneWord, description } = Astro.props;
---

<div class="h-full place-items-center bg-white py-8">
  <div class="container items-center justify-between sm:gap-24 flex max-sm:flex-col max-sm:w-[20rem]">
    <div class="max-sm:text-center mb-8 max-sm:w-[20rem] w-[50%]">
      <div
        class="flex items-center max-sm:justify-center font-medium text-sm mb-5">
        {oneWord}
      </div>
      <div
        class="mb-4 text-blackGrey leading-tight text-2xl font-bold">
        {title}
      </div>
      <div class="font-normal">
        {description}
      </div>
    </div>
    <div class="flex w-[50%] max-sm:order-1 max-sm:w-[20rem]">
      <video
        controls={false}
        autoplay
        loop
        muted
        playsinline
        height="296"         
        class="rounded-lg"
        ><source src={videoSrc} type="video/mp4" /></video
      >
    </div>
  </div>
</div>
